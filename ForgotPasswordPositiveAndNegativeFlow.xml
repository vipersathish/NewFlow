<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="ScreenIt App for Forgot Password">



	<test name="forgot password with existing mailid">

	

		<parameter name="EmailId" value="san111@screenit.io" />
		
		<parameter name="screenshotName"  value="forgotpasswordwithExistingUser" />

		<classes>
			<class
				name="com.Screenit.version3.Test.ForgotPasswordTestForPostiveAndNegativeFlow" />
		</classes>
	</test> <!-- Test -->


	<test name="forgot password with new mailid">

		<parameter name="EmailId" value="san191@screenit.io" />
		
		<parameter name="screenshotName"  value="forgotpasswordwithNewMailId" />


		<classes>
			<class
				name="com.Screenit.version3.Test.ForgotPasswordTestForPostiveAndNegativeFlow" />
		</classes>
	</test> <!-- Test -->


	<test name="forgot password with wrong mailid">

	

		<parameter name="EmailId" value="@screenit.io" />
		
		<parameter name="screenshotName"  value="forgotpasswordwithWrongMaildId" />


		<classes>
			<class
				name="com.Screenit.version3.Test.ForgotPasswordTestForPostiveAndNegativeFlow" />
		</classes>
	</test> <!-- Test -->



</suite> <!-- ScreenIt App -->
